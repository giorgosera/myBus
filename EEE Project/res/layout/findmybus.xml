<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:padding="10dp">
	<TextView android:id="@+id/tvMyStops" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="SAVED BUS STOPS"
		android:layout_alignParentTop="true" />

	<Spinner android:id="@+id/SpinnerF" android:layout_height="wrap_content"
		android:layout_marginTop="2dip" android:prompt="@string/promptFavStop"
		android:layout_below="@id/tvMyStops" android:layout_alignParentLeft="true" />
	<Button android:id="@+id/bFavStop" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginTop="2dip"
		android:text="GO!" android:layout_below="@id/tvMyStops"
		android:layout_toRightOf="@id/SpinnerF" />

	<TextView android:id="@+id/tvNewSearch"
	android:layout_width="fill_parent"
	android:layout_below="@id/SpinnerF"
		android:layout_height="wrap_content" android:layout_marginTop="11dip"
		android:text="NEW SEARCH" android:gravity="center" />

	<TextView android:id="@+id/tvSelectC"
	android:layout_width="fill_parent"
	android:layout_below="@id/tvNewSearch"
		android:layout_height="wrap_content" android:layout_marginTop="1dip"
		android:text="Select company:" />
	<Spinner android:id="@+id/Spinner01"
		android:layout_below="@id/tvSelectC"
	 android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:prompt="@string/promptCompany" />

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginTop="1dip"
		android:text="Select route:" />
	<Spinner android:id="@+id/Spinner02" android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginTop="1dip"
		android:text="Select Bus Stop:" />
	<Spinner android:id="@+id/Spinner03" android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal">
		<CheckBox android:id="@+id/cbSave" android:layout_height="fill_parent"
			android:text="Save Bus Stop" android:layout_weight="0.75"
			android:layout_marginTop="5dip" />
		<Button android:id="@+id/bFavStop" android:layout_weight="0.25"
			android:layout_height="fill_parent" android:layout_marginTop="5dip"
			android:text="GO!" />

	</LinearLayout>
	</RelativeLayout>
