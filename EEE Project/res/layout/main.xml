<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:layout_alignWithParentIfMissing="true" android:padding="6dp">

	<ImageView android:id="@+id/icon"
		android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
		android:src="@drawable/icon" android:layout_height="100dp"
		android:layout_width="100dp" android:padding="30dp" />

	<Button android:id="@+id/bBusStop"
		android:layout_centerVertical="true" android:layout_alignParentRight="true"
		android:layout_alignWithParentIfMissing="true" android:text="Find my Bus Stop"
		android:layout_width="155dp" android:layout_height="150dp"
		android:textSize="25dp" />

	<Button android:id="@+id/bBus" android:layout_toLeftOf="@id/bBusStop"
		android:layout_centerVertical="true" android:text="Find my Bus"
		android:layout_height="150dp" android:textSize="25dp"
		android:layout_width="fill_parent" />


	<Button android:id="@+id/bSettings" android:layout_below="@id/bBusStop"
		android:layout_alignParentRight="true"
		android:layout_alignWithParentIfMissing="true" android:layout_width="155dp"
		android:layout_height="100dp" android:textSize="20dp" android:text="Settings" />

	<Button android:id="@+id/bRoutes" android:layout_below="@id/bBusStop"
		android:layout_alignWithParentIfMissing="true"
		android:layout_toLeftOf="@id/bSettings" android:text="Routes &amp; Schedules"
		android:layout_width="fill_parent" android:layout_height="100dp"
		android:textSize="20dp" />

</RelativeLayout>